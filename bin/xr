#!/bin/bash
CMD=$(xrandr | awk '
    BEGIN{
        printf("xrandr ");
        m=""
    }
    NR > 1 && $0 !~ /^ / {
        if ($1 ~ /^eDP/){
            m=$1;
            printf("--output %s --auto ", m);
        } else if ($2 == "connected"){
            printf("--output %s --auto --left-of %s ", $1, m);
        } else {
            printf("--output %s --off ", $1);
        }
    }
    END{printf("\n");}
')
echo $CMD
eval $CMD
